# Supabase Postgres connection for Prisma
# Fill these from Supabase Dashboard -> Project Settings -> Database -> Connection string
# Tip: For Prisma in dev, use the "Direct connection" string (not the Transaction Pooler)

DATABASE_URL="postgresql://postgres:<PASSWORD>@<HOST>:5432/postgres?schema=public&sslmode=require"

# JWT Secrets
JWT_ACCESS_SECRET="your-super-secret-access-key-change-this"
JWT_REFRESH_SECRET="your-super-secret-refresh-key-change-this"
JWT_ACCESS_EXPIRES_IN="15m"
JWT_REFRESH_EXPIRES_IN="7d"

# Server
PORT=5000
NODE_ENV="development"

# CORS
FRONTEND_URL="http://localhost:5173"
