// Prisma schema aligned to Supabase (PostgreSQL) init script
// - IDs: UUID
// - Money-like values: Decimal(12,2)

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model User {
  id          String   @id @default(uuid()) @db.Uuid
  email       String   @unique
  password    String
  name        String
  role        UserRole @default(SITE_MANAGER)
  permissions String[] @default(["reports", "roster", "staff", "projects"])
  createdAt   DateTime @default(now()) @map("created_at")
  updatedAt   DateTime @updatedAt @map("updated_at")

  managedProjects Project[]

  @@map("users")
}

enum UserRole {
  SUPER_ADMIN
  AREA_MANAGER
  SITE_MANAGER
}

model Project {
  id          String   @id @default(uuid()) @db.Uuid
  name        String
  location    String?
  themeColor  String   @default("#3b82f6") @map("theme_color")
  description String?
  isActive    Boolean  @default(true) @map("is_active")
  createdAt   DateTime @default(now()) @map("created_at")
  updatedAt   DateTime @updatedAt @map("updated_at")

  managerId String? @map("manager_id") @db.Uuid
  manager   User?   @relation(fields: [managerId], references: [id])

  staff           Staff[]
  rosters         Roster[]
  costSharingFrom CostSharing[] @relation("SourceProject")
  costSharingTo   CostSharing[] @relation("DestinationProject")

  @@index([managerId])
  @@map("projects")
}

model CostSharing {
  id         String  @id @default(uuid()) @db.Uuid
  percentage Decimal @db.Decimal(12, 2)

  sourceProjectId String  @map("source_project_id") @db.Uuid
  sourceProject   Project @relation("SourceProject", fields: [sourceProjectId], references: [id], onDelete: Cascade)

  destinationProjectId String  @map("destination_project_id") @db.Uuid
  destinationProject   Project @relation("DestinationProject", fields: [destinationProjectId], references: [id], onDelete: Cascade)

  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  @@unique([sourceProjectId, destinationProjectId])
  @@index([sourceProjectId])
  @@index([destinationProjectId])
  @@map("cost_sharing")
}

model Staff {
  id           String            @id @default(uuid()) @db.Uuid
  name         String
  position     String
  phone        String?
  wagePerDay   Decimal           @map("wage_per_day") @db.Decimal(12, 2)
  staffType    StaffType         @default(REGULAR) @map("staff_type")
  code         String            @default("Code 1")
  isActive     Boolean           @default(true) @map("is_active")
  availability StaffAvailability @default(AVAILABLE)
  defaultShift String?           @default("OFF") @map("default_shift")
  remark       String?

  projectId String  @map("project_id") @db.Uuid
  project   Project @relation(fields: [projectId], references: [id], onDelete: Cascade)

  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  rosterEntries     RosterEntry[]
  monthlyAttendance MonthlyAttendance[]

  @@index([projectId])
  @@index([isActive])
  @@map("staff")
}

enum StaffType {
  REGULAR
  SPARE
}

enum StaffAvailability {
  AVAILABLE
  TEMPORARILY_OFF
  ON_LEAVE
}

model ShiftType {
  id          String   @id @default(uuid()) @db.Uuid
  code        String   @unique
  name        String
  startTime   String?  @map("start_time")
  endTime     String?  @map("end_time")
  color       String   @default("#3b82f6")
  isWorkShift Boolean  @default(true) @map("is_work_shift")
  createdAt   DateTime @default(now()) @map("created_at")
  updatedAt   DateTime @updatedAt @map("updated_at")

  @@map("shift_types")
}

model Roster {
  id        String   @id @default(uuid()) @db.Uuid
  year      Int
  month     Int
  projectId String   @map("project_id") @db.Uuid
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  project           Project             @relation(fields: [projectId], references: [id], onDelete: Cascade)
  entries           RosterEntry[]
  monthlyAttendance MonthlyAttendance[]

  @@unique([projectId, year, month])
  @@map("rosters")
}

model RosterEntry {
  id        String  @id @default(uuid()) @db.Uuid
  day       Int
  shiftCode String  @map("shift_code")
  notes     String?

  rosterId String @map("roster_id") @db.Uuid
  staffId  String @map("staff_id") @db.Uuid

  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  roster Roster @relation(fields: [rosterId], references: [id], onDelete: Cascade)
  staff  Staff  @relation(fields: [staffId], references: [id], onDelete: Cascade)

  @@unique([rosterId, staffId, day])
  @@map("roster_entries")
}

model MonthlyAttendance {
  id                 String   @id @default(uuid()) @db.Uuid
  staffId            String   @map("staff_id") @db.Uuid
  rosterId           String   @map("roster_id") @db.Uuid
  year               Int
  month              Int
  totalWorkDays      Int      @default(0) @map("total_work_days")
  totalAbsent        Int      @default(0) @map("total_absent")
  totalSickLeave     Int      @default(0) @map("total_sick_leave")
  totalPersonalLeave Int      @default(0) @map("total_personal_leave")
  totalVacation      Int      @default(0) @map("total_vacation")
  totalLate          Int      @default(0) @map("total_late")
  deductionAmount    Decimal  @default("0") @map("deduction_amount") @db.Decimal(12, 2)
  createdAt          DateTime @default(now()) @map("created_at")
  updatedAt          DateTime @updatedAt @map("updated_at")

  staff  Staff  @relation(fields: [staffId], references: [id], onDelete: Cascade)
  roster Roster @relation(fields: [rosterId], references: [id], onDelete: Cascade)

  @@unique([staffId, year, month])
  @@map("monthly_attendance")
}
