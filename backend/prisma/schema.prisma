// Prisma schema aligned to Supabase (PostgreSQL) init script
// - IDs: UUID
// - Money-like values: Decimal(12,2)

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
}

model User {
  id          String   @id @default(uuid()) @db.Uuid
  email       String   @unique
  password    String
  name        String
  role        UserRole @default(SITE_MANAGER)
  permissions String[] @default(["reports", "roster", "staff", "projects", "users", "settings"])
  createdAt   DateTime @default(now()) @map("created_at")
  updatedAt   DateTime @updatedAt @map("updated_at")

  managedProjects Project[]
  projectAccess   UserProject[]

  @@map("users")
}

enum UserRole {
  SUPER_ADMIN
  AREA_MANAGER
  SITE_MANAGER
}

model Project {
  id                 String   @id @default(uuid()) @db.Uuid
  name               String
  location           String?
  themeColor         String   @default("#3b82f6") @map("theme_color")
  description        String?
  isActive           Boolean  @default(true) @map("is_active")
  editCutoffDay      Int      @default(2) @map("edit_cutoff_day")
  editCutoffNextMonth Boolean @default(true) @map("edit_cutoff_next_month")
  createdAt          DateTime @default(now()) @map("created_at")
  updatedAt          DateTime @updatedAt @map("updated_at")

  managerId String? @db.Uuid @map("manager_id")
  manager   User?   @relation(fields: [managerId], references: [id])

  staff           Staff[]
  rosters         Roster[]
  subProjects     SubProject[]
  userAccess      UserProject[]

  @@index([managerId])
  @@map("projects")
}

model SubProject {
  id         String  @id @default(uuid()) @db.Uuid
  name       String
  percentage Decimal @db.Decimal(12,2) @default(0)

  projectId String  @db.Uuid @map("project_id")
  project   Project @relation(fields: [projectId], references: [id], onDelete: Cascade)

  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  @@index([projectId])
  @@map("sub_projects")
}

model Position {
  id          String  @id @default(uuid()) @db.Uuid
  name        String  @unique
  defaultWage Decimal @db.Decimal(12,2) @default("0") @map("default_wage")
  createdAt   DateTime @default(now()) @map("created_at")
  updatedAt   DateTime @updatedAt @map("updated_at")

  @@map("positions")
}

model Staff {
  id            String            @id @default(uuid()) @db.Uuid
  name          String
  position      String
  positionId    String?           @db.Uuid @map("position_id")
  phone         String?
  wagePerDay    Decimal           @db.Decimal(12,2) @map("wage_per_day")
  staffType     StaffType         @default(REGULAR) @map("staff_type")
  code          String            @default("Code 1")
  isActive      Boolean           @default(true) @map("is_active")
  defaultShift  String?           @default("OFF") @map("default_shift")
  weeklyOffDay  Int?              @map("weekly_off_day")
  displayOrder  Int?              @map("display_order")
  remark        String?

  projectId String  @db.Uuid @map("project_id")
  project   Project @relation(fields: [projectId], references: [id], onDelete: Cascade)

  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  rosterEntries     RosterEntry[]

  @@index([projectId])
  @@index([isActive])
  @@map("staff")
}

enum StaffType {
  REGULAR
  SPARE
}

model ShiftType {
  id                String   @id @default(uuid()) @db.Uuid
  code              String   @unique
  name              String
  startTime         String?  @map("start_time")
  endTime           String?  @map("end_time")
  color             String   @default("#3b82f6")
  isWorkShift       Boolean  @default(true) @map("is_work_shift")
  isSystemDefault   Boolean  @default(false) @map("is_system_default")
  createdAt         DateTime @default(now()) @map("created_at")
  updatedAt         DateTime @updatedAt @map("updated_at")

  @@map("shift_types")
}

model Roster {
  id        String   @id @default(uuid()) @db.Uuid
  year      Int
  month     Int
  projectId String   @db.Uuid @map("project_id")
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  project Project      @relation(fields: [projectId], references: [id], onDelete: Cascade)
  entries RosterEntry[]

  @@unique([projectId, year, month])
  @@map("rosters")
}

model RosterEntry {
  id        String   @id @default(uuid()) @db.Uuid
  day       Int
  shiftCode String   @map("shift_code")
  notes     String?

  rosterId String @db.Uuid @map("roster_id")
  staffId  String @db.Uuid @map("staff_id")

  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  roster Roster @relation(fields: [rosterId], references: [id], onDelete: Cascade)
  staff  Staff  @relation(fields: [staffId], references: [id], onDelete: Cascade)

  @@unique([rosterId, staffId, day])
  @@map("roster_entries")
}

model UserProject {
  id        String   @id @default(uuid()) @db.Uuid
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  userId    String @db.Uuid @map("user_id")
  projectId String @db.Uuid @map("project_id")

  user    User    @relation(fields: [userId], references: [id], onDelete: Cascade)
  project Project @relation(fields: [projectId], references: [id], onDelete: Cascade)

  @@unique([userId, projectId])
  @@index([userId])
  @@index([projectId])
  @@map("user_projects")
}
